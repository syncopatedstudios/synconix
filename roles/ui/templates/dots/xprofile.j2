#!/usr/bin/env bash
if test -f "$HOME/.Xresources"; then
    echo "merging ..."
    xrdb -merge "$HOME/.Xresources"
fi

/usr/bin/xmodmap -e "clear Lock"
/usr/bin/xmodmap -e "keysym Caps_Lock = F13"

xset s off
xset -dpms

numlockx on

guake &
{% if use_networkmanager == 'True' %}
if test -f "/etc/NetworkManager/NetworkManager.conf"; then
  nm-applet &
fi
{% endif %}
