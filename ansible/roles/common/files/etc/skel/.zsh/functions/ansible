#TODO: does not read extra vars option. e.g -e "thing='.zsh'"
function runplaybook() {
  #run an ansible related thing
  PLAYBOOK="$ANSIBLE_HOME/soundbot.yml"
  # ARGS=$1

  ansible-playbook -v --connection=local -i $HOSTNAME, $PLAYBOOK
}

function listtags()
{
  PLAYBOOK="$ANSIBLE_HOME/soundbot.yml"

  ansible-playbook -v --connection=local -i $HOSTNAME, $PLAYBOOK --list-tags
}

function listtasks()
{
  PLAYBOOK="$ANSIBLE_HOME/soundbot.yml"

  ansible-playbook -v --connection=local -i $HOSTNAME, $PLAYBOOK --list-tasks
}

function runtag() {
  #run an ansible related thing
  PLAYBOOK="$ANSIBLE_HOME/soundbot.yml"
  TAGS=$1

  ansible-playbook -v --connection=local -i $HOSTNAME, $PLAYBOOK --tags $TAGS
}

function checktag() {
  #run an ansible related thing
  PLAYBOOK="$ANSIBLE_HOME/soundbot.yml"
  TAGS=$1

  ansible-playbook -v -C --connection=local -i $HOSTNAME, $PLAYBOOK --tags $TAGS
}

function starttask() {
  #run an ansible related thing
  PLAYBOOK="$ANSIBLE_HOME/soundbot.yml"
  TASK=$1

  ansible-playbook -v --connection=local -i $HOSTNAME, $PLAYBOOK --start-at-task $TASK
}

function setloglevel() {
  #run an ansible related thing
  PLAYBOOK="$ANSIBLE_HOME/soundbot.yml"
  LEVEL=$1

  ansible-playbook -v --connection=local -i $HOSTNAME, $PLAYBOOK --tags logging -e "journal_level=$LEVEL"
}

function settheme() {
  #run an ansible related thing
  PLAYBOOK="$ANSIBLE_HOME/soundbot.yml"
  GTK_THEME=$1

  ansible-playbook -v --connection=local -i $HOSTNAME, $PLAYBOOK --tags theme -e "gtk_theme=$GTK_THEME"
}

function seticons() {
  #run an ansible related thing
  PLAYBOOK="$ANSIBLE_HOME/soundbot.yml"
  ICON_THEME=$1

  ansible-playbook -v --connection=local -i $HOSTNAME, $PLAYBOOK --tags theme -e "gtk_icon_theme=$ICON_THEME" \
  -e "qt5_icon_theme=$ICON_THEME"
}

function syncdots() {
  #run an ansible related thing
  PLAYBOOK="$ANSIBLE_HOME/soundbot.yml"

  ansible-playbook -v --connection=local -i $HOSTNAME, $PLAYBOOK --tags syncdots -e "syncdots=True"
}
