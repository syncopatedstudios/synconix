alias startjack="jack_control start && a2j_control --start"

alias zalsa_out_preamp="jack_load zalsa_out -i '-d hw:1' &!"
alias zalsa_in_preamp="jack_load zalsa_in -i '-d hw:1,0' &!"

alias preamp_out="zita-j2a -j preamp_out -d hw:1 &!"
alias preamp_in="zita-a2j -j preamp_in -d hw:1,0 &!"

alias listinputs="sudo libinput list-devices"

alias h="history 1"

alias cp="cp -i"                          # confirm before overwriting something
alias mv="mv -i"                          # confirm before overwriting something
alias df='df -h'                          # human-readable sizes
alias free='free -m'                      # show sizes in MB
alias np='nano -w PKGBUILD'
alias more=less

alias ll="ls -lah"

alias nocomment='grep -v "^\($\|#\)"'

alias checklog='sudo journalctl -r | lnav'
alias taillog='sudo journalctl -f | lnav'

alias netlog='sudo journalctl -b -o short-monotonic --no-hostname -u systemd-udevd -u systemd-networkd -f | lnav'

alias fileperms="find . -type f -exec chmod 0664 {} +"
alias dirperms="find . -type d -exec chmod 0755 {} +"

#alias man="PAGER='most' man "
#alias awman="PAGER='most' awman"

alias info="sudo apt info"
alias search="sudo apt search"
alias install="sudo apt install"
alias uninstall="sudo apt remove"

alias p="sudo ping -c 4 google.com"

alias commit="git commit -am"
alias gfp="git fetch && git pull"
alias st="git status"

#alias cat="bat"

#turn off pcspkr
alias beepoff="rmmod pcspkr"

alias e="$EDITOR"
alias d='dig +nocmd +multiline +noall +answer'

alias cpup="sudo cpupower -c all frequency-set -g performance"

alias dots='/usr/bin/git --git-dir=$HOME/.dots/ --work-tree=$HOME'
alias dst='dots status'


# open rb file in pry
alias loadpry='pry -r'

alias pulse_loopback="pactl load-module module-loopback source=jack_in"
alias pulse_list_sources="pacmd list-sources | grep -e 'index:' -e device.string -e 'name:'"

alias vnc_serv="x11vnc -ncache_cr -display :0"

# stolen with malice and spite from: https://reposhub.com/linux/miscellaneous/pawelduda-fzf-live-repl.html
# alias manp="man -k . | fzf --preview "echo {} | awk '{print $1}' | xargs -r man" | awk '{print $1}' | xargs -r man"

alias awkp="echo '' | fzf --print-query --preview 'echo "a\nb\nc\nd" | awk {q}'"

alias rubyp="echo '' | fzf --print-query --preview 'ruby -e {q}'"

alias lsmi="/usr/local/src/lsmi/lsmi-keyhack -v -k ~/.keydb -d /dev/input/event5"

alias gitree="git log --oneline --decorate --graph --all"
