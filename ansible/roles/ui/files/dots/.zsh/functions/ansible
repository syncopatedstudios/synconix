#TODO: does not read extra vars option. e.g -e "thing='.zsh'"
export INVENTORY="$ANSIBLE_HOME/hosts"
export PLAYBOOK="$ANSIBLE_HOME/soundbot.yml"

function runplaybook() {
  ansible-playbook -v --connection=local -i $HOSTNAME, $PLAYBOOK
}

function listtags() {
  ansible-playbook -v --connection=local -i $HOSTNAME, $PLAYBOOK --list-tags
}

function listtasks() {
  ansible-playbook -v --connection=local -i $HOSTNAME, $PLAYBOOK --list-tasks
}

function runtag() {
  TAGS="${1}"
  ansible-playbook --connection=local -i $HOSTNAME, $PLAYBOOK --tags $TAGS
}

function checktag() {
  TAGS="facts,${1}"
  ansible-playbook -v -C -i $INVENTORY $PLAYBOOK --limit $HOSTNAME --tags $TAGS
}

function starttask(){
  TASK=$1
  ansible-playbook -v -i $INVENTORY $PLAYBOOK --limit $HOSTNAME --start-at-task $TASK
}

function setloglevel() {
  LEVEL=$1

  ansible-playbook -v -i $INVENTORY $PLAYBOOK --limit $HOSTNAME --tags logging -e "journal_level=$LEVEL"
}

function settheme() {
  GTK_THEME=$1
  ICON_THEME=$2

  ansible-playbook -v --connection=local -i $HOSTNAME, $PLAYBOOK --tags theme -e "gtk_theme=$GTK_THEME" -e "gtk_icon_theme=$ICON_THEME" \
  -e "qt5_icon_theme=$ICON_THEME"
}

function syncdots()  {
  ansible-playbook -v --connection=local -i $HOSTNAME, $PLAYBOOK --tags syncdots -e "syncdots=true"
}
