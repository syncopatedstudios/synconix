#!/bin/bash
{% if inventory_hostname == 'thinkbot'%}
xrandr --output eDP1 --primary --mode 1600x900 --pos 0x0 --rotate normal --output HDMI1 --off
{% endif %}

if [ "$?" -ne 0 ]; then
  notify-send -u critical "monitor reconfiguration was not successful"
else
  $HOME/.i3/scripts/polybar.sh
  nitrogen --restore
fi
