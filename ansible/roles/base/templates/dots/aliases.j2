# alias dst='dots status'

# open rb file in pry
alias loadpry='pry -r'

alias pulse_loopback="pactl load-module module-loopback source=jack_in"
alias pulse_list_sources="pacmd list-sources | grep -e 'index:' -e device.string -e 'name:'"

alias vnc_serv="x11vnc -ncache_cr -display :0"


alias manp="man -k . | fzf --preview "echo {} | awk '{print $1}' | xargs -r man" | awk '{print $1}' | xargs -r man"

alias lsmi="/usr/local/src/lsmi/lsmi-keyhack -v -k ~/.keydb -d /dev/input/event5"

# Re-enable caps lock
alias clearcaps='/usr/bin/xmodmap -e "clear Lock"'
alias capsf13='/usr/bin/xmodmap -e "keysym Caps_Lock = F13"'

alias ytdla="youtube-dl -o "%(title)s.%(ext)s" -x --audio-format wav --external-downloader aria2c"

alias ytdlv="youtube-dl -o "%(title)s.%(ext)s" -f mp4 --external-downloader aria2c"

alias icat="kitty +kitten icat --align left"

alias baudline_jack="pw-jack baudline_jack -c 4 -jack"

alias jnoisemeter="pw-jack jnoisemeter"

alias an="cd $ANSIBLE_HOME"
alias so="cd $WORKSPACE/soundbot"

alias wo="cd $WORKSPACE"
